{
  "name": "@pathakabhishek/bhasha",
  "version": "0.0.1",
  "description": "A TypeScript modeling framework for application requirements that provides high-fidelity context for AI-assisted development. Build logically consistent, composable models validated at compile-time.",
  "keywords": [
    "product-management",
    "requirements",
    "modeling",
    "ddd",
    "domain-driven-design",
    "typescript",
    "decorators",
    "pmac",
    "stakeholders",
    "journeys",
    "expectations",
    "ai-assisted",
    "context-modeling",
    "bounded-context",
    "enterprise-architecture",
    "enterprise-context-management-system"
  ],
  "homepage": "https://github.com/krabhishek/bhasha#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krabhishek/bhasha.git"
  },
  "bugs": {
    "url": "https://github.com/krabhishek/bhasha/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Abhishek Pathak",
    "url": "https://github.com/krabhishek"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run test && npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "3.2.4",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
